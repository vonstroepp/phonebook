{
    "name": "phonebook_express",
    "version": "1.0.0",
    "description": "simple phonebook app using express  - based on chapter 3 of fullstackopen.com",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "test": "echo \"Error: no test specified\" && exit 1",
